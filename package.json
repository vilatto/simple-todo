{
  "name": "simple-todo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "npm run build --workspace=server && npm run build --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
